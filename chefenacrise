    // --- L√ìGICA ---
    function findRecipe() {
        const input = document.getElementById('ingredients').value.toLowerCase();
        
        if (!input.trim()) {
            alert("√î minha filha, digita alguma coisa a√≠! Vento n√£o enche barriga!");
            return;
        }

        // Troca telas
        document.getElementById('screen-input').style.display = 'none';
        document.getElementById('screen-loading').style.display = 'flex';
        
        // Mensagem aleat√≥ria
        document.getElementById('loadingMsg').innerText = funnyMessages[Math.floor(Math.random() * funnyMessages.length)];

        setTimeout(() => {
            let found = null;

            // Busca simples
            for (let rec of recipesDB) {
                for (let key of rec.keywords) {
                    if (input.includes(key)) {
                        found = rec;
                        break;
                    }
                }
                if (found) break;
            }

            if (!found) found = fallbackRecipe;

            renderRecipe(found);

            document.getElementById('screen-loading').style.display = 'none';
            document.getElementById('screen-result').style.display = 'block';
        }, 2000);
    }

    function renderRecipe(rec) {
        document.getElementById('recTitle').innerText = rec.title;
        document.getElementById('recTag').innerText = rec.tag;
        
        const ul = document.getElementById('recIngredients');
        ul.innerHTML = '';
        rec.ingredients.forEach(item => {
            const li = document.createElement('li');
            li.innerText = item;
            ul.appendChild(li);
        });

        const ol = document.getElementById('recSteps');
        ol.innerHTML = '';
        rec.steps.forEach(step => {
            const li = document.createElement('li');
            li.innerText = step;
            ol.appendChild(li);
        });

        document.getElementById('recFun').innerHTML = `<i class="fas fa-lightbulb"></i> ${rec.fun}`;
    }

    function resetApp() {
        document.getElementById('screen-result').style.display = 'none';
        document.getElementById('screen-input').style.display = 'flex';
        document.getElementById('ingredients').value = '';
    }

</script>
