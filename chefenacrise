    const funnyMessages = [
        "Consultando os esp√≠ritos da fome...",
        "Perguntando pra vizinha...",
        "Calculando se d√° pra comprar carne...",
        "Verificando a validade dos produtos...",
        "Invocando a Ana Maria Braga..."
